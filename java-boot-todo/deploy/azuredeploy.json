{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "defaultValue": "northeurope",
      "type": "String"
    },
    "environmentName": {
      "defaultValue": "",
      "type": "String"
    },
    "imageRepository": {
      "defaultValue": "joergjo/java-boot-todo",
      "type": "String"
    },
    "tag": {
      "defaultValue": "latest",
      "type": "String"
    },
    "postgresHost": {
      "defaultValue": "",
      "type": "String"
    },
    "postgresUser": {
      "defaultValue": "",
      "type": "String"
    },
    "postgresPassword": {
      "defaultValue": "",
      "type": "String"
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "sb-todo-api",
      "type": "Microsoft.Web/containerApps",
      "apiVersion": "2021-03-01",
      "kind": "containerapp",
      "location": "[parameters('location')]",
      "properties": {
        "kubeEnvironmentId": "[resourceId('Microsoft.Web/kubeEnvironments', parameters('environmentName'))]",
        "configuration": {
          "activeRevisionsMode": "multiple",
          "ingress": {
            "external": true,
            "targetPort": 8080
          },
          "secrets": [
            {
              "name": "postgres-host",
              "value": "[parameters('postgresHost')]"
            },
            {
              "name": "postgres-user",
              "value": "[parameters('postgresUser')]"
            },
            {
              "name": "postgres-pwd",
              "value": "[parameters('postgresPassword')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "image": "[concat(parameters('imageRepository'), ':', parameters('tag'))]",
              "name": "sb-todo-api",
              "env": [
                {
                  "name": "POSTGRESQL_HOST",
                  "secretref": "postgres-host"
                },
                {
                  "name": "POSTGRESQL_USERNAME",
                  "secretref": "postgres-user"
                },
                {
                  "name": "POSTGRESQL_PASSWORD",
                  "secretref": "postgres-pwd"
                },
                {
                  "name": "SPRING_PROFILES_ACTIVE",
                  "value": "json-logging"
                }
              ],
              "resources": {
                "cpu": 1.0,
                "memory": "2Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 10,
            "rules": [
              {
                "name": "httpscalingrule",
                "http": {
                  "metadata": {
                    "concurrentRequests": "100"
                  }
                }
              }
            ]
          },
          "dapr": {
            "enabled": false
          }
        }
      }
    }
  ]
}
